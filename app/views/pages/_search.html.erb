<div class="w-75 mt-5 rounded-4" 
    style="
        box-shadow: 0px 0px 0px 5px #FFE4AF;
        display: flex;
        justify-content: center;
        align-items: center;
    ">
    
    <!-- Search Form -->
    <form action="/search" method="GET" style="width: 100%; max-width: 600px; display: flex;">
        <input 
            type="text" 
            name="query" 
            placeholder="Name of your city..." 
            aria-label="Search" 
            style="
                
                flex: 1;
                padding: 1rem 1.5rem; /* Increased padding for height */
                border: none;
                border-radius: 1rem 0 0 1rem;
                outline: none;
                font-size: 1.25rem; /* Increased font size */
                height: 3rem; /* Set a specific height */
                box-sizing: border-box; /* Ensure padding is included in height */
            ">
        <button type="submit" style="
                padding: 0 1.5rem; /* Increased horizontal padding */
                border: none;
                border-radius: 0 1rem 1rem 0;
                background-color: #9973DC;
                cursor: pointer;
                font-size: 1.25rem; /* Match font size with input */
                height: 3rem; /* Match the input height */
                display: flex;
                align-items: center;
                justify-content: center;
            ">
            🔍
        </button>
    </form>
    
</div>
